<% tooltip  = true if local_assigns[:tooltip].nil? %>
<% title    = true if local_assigns[:title].nil? %>
<% achieved = badge.achieved? ? 'achieved' : 'unachieved' %>

<div class="badge_box">
  <div class="<%= achieved %>">
    <div class="badge_icon">
      <span
        class=" <%= badge.img %>"
        title="<%= badge.desc %>"
        <% if tooltip %>
          data-toggle="tooltip"
          data-placement="top"
        <% end %>
        >
      </span>
    </div>

    <% if title %>
      <span class="badge_title"><%= badge.name %></span>
    <% end %>
  </div>
</div>
