<div class="content col-sm-12 col-md-9 grey-bg" role="main">
  <h1>My Badges</h1>
  <% @achievements.each do |name, badges| %>
    <div class="badge_shelf">
      <span class="achievement_title">
        <%= t("achiever.achievements.#{name}.title") %>
        <% if Achiever.achievement(name)[:type] == 'slotted' %>
          <%= "#{badges.first.have.to_s(2).count('1')} / #{Achiever.achievement(name)[:slots].length}" %>
        <% else %>
          <%= "#{badges.first.have} / #{badges.max_by(&:required).required}" %>
        <% end %>
      </span>
      <div class="badge_boxes">
        <% badges.each do |badge| %>
          <div class="badge_box">
            <%= badge.icon %>
            <span class="badge_title"><%= badge.name %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
